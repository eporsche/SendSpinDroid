<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- App Bar with Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleCentered="false"
            app:navigationIcon="@null"
            style="@style/Widget.Material3.Toolbar" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content Area (scrolls under app bar) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- ============================================================ -->
        <!-- SEARCHING VIEW - Shown on startup while discovering servers  -->
        <!-- ============================================================ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchingView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/searchingProgressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:indicatorSize="64dp"
                app:trackThickness="4dp"
                app:layout_constraintBottom_toTopOf="@id/searchingStatusText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/searchingStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/searching_for_servers"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:accessibilityLiveRegion="polite"
                app:layout_constraintBottom_toTopOf="@id/searchingManualButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchingProgressIndicator" />

            <!-- Manual entry button - shown after timeout or user can tap anytime -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/searchingManualButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/enter_manually"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchingStatusText"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ============================================================ -->
        <!-- MANUAL ENTRY VIEW - Shown when user wants to enter manually  -->
        <!-- ============================================================ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/manualEntryView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone">

            <TextView
                android:id="@+id/manualStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_servers_found"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:accessibilityLiveRegion="polite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/searchAgainButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="16dp"
                android:text="@string/search_again"
                app:icon="@drawable/ic_refresh"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/manualStatusText" />

            <Button
                android:id="@+id/addManualServerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="8dp"
                android:text="@string/add_server_manually"
                android:contentDescription="@string/accessibility_add_manual_server"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@drawable/ic_server"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/searchAgainButton" />

            <TextView
                android:id="@+id/serversLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/available_servers"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:labelFor="@id/serversRecyclerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addManualServerButton" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/serversRecyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:importantForAccessibility="yes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/serversLabel" />

            <!-- Empty state when no servers are available -->
            <LinearLayout
                android:id="@+id/emptyServerListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/serversLabel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_server"
                    android:alpha="0.4"
                    android:importantForAccessibility="no" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/empty_server_list_title"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/empty_server_list_subtitle"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:alpha="0.7"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ============================================================ -->
        <!-- NOW PLAYING VIEW - Shown when connected to a server          -->
        <!-- ============================================================ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nowPlayingView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <!-- Connection Progress (shown during connecting) -->
            <LinearLayout
                android:id="@+id/connectionProgressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/connectionProgressIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:importantForAccessibility="no"
                    app:indicatorSize="64dp"
                    app:trackThickness="4dp" />

                <TextView
                    android:id="@+id/connectionStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/connecting"
                    android:textSize="16sp"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite" />

            </LinearLayout>

            <!-- Now Playing Content -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nowPlayingContent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Large Album Art with Buffering Overlay -->
                <FrameLayout
                    android:id="@+id/albumArtContainer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_max="@dimen/album_art_max_width"
                    app:layout_constraintWidth_percent="0.7">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <ImageView
                            android:id="@+id/albumArtView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/placeholder_album"
                            android:contentDescription="@string/album_art"
                            android:importantForAccessibility="yes" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Buffering Indicator Overlay -->
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/bufferingIndicator"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:visibility="gone"
                        android:importantForAccessibility="no"
                        app:indicatorSize="64dp"
                        app:trackThickness="4dp"
                        app:indicatorColor="?attr/colorPrimary"
                        tools:visibility="visible" />

                </FrameLayout>

                <!-- Track Info - Title with larger, bolder text -->
                <TextView
                    android:id="@+id/nowPlayingText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/title_margin_top"
                    android:gravity="center"
                    android:text="@string/not_playing"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"
                    android:letterSpacing="-0.02"
                    android:lineSpacingMultiplier="1.1"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/albumArtContainer" />

                <!-- Metadata (artist/album) - Dimmer, smaller secondary text -->
                <TextView
                    android:id="@+id/metadataText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:gravity="center"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:alpha="0.9"
                    android:letterSpacing="0.01"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nowPlayingText" />

                <!-- Group name display -->
                <TextView
                    android:id="@+id/groupNameText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:gravity="center"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="?attr/colorPrimary"
                    android:alpha="0.9"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/metadataText" />

                <!-- Playback Controls Container -->
                <LinearLayout
                    android:id="@+id/playbackControlsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/controls_margin_top"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/groupNameText">

                    <!-- Main Controls Row: Previous, Play/Pause, Next -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/previousButton"
                            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                            android:layout_width="@dimen/playback_button_size_small"
                            android:layout_height="@dimen/playback_button_size_small"
                            android:layout_marginEnd="@dimen/playback_button_spacing"
                            android:contentDescription="@string/accessibility_previous_button"
                            android:enabled="false"
                            app:icon="@drawable/ic_skip_previous"
                            app:iconSize="@dimen/playback_icon_size_small" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/playPauseButton"
                            style="@style/Widget.Material3.Button.IconButton.Filled"
                            android:layout_width="@dimen/playback_button_size_large"
                            android:layout_height="@dimen/playback_button_size_large"
                            android:stateListAnimator="@animator/button_scale"
                            android:contentDescription="@string/accessibility_play_button"
                            android:enabled="false"
                            app:icon="@drawable/ic_play"
                            app:iconSize="@dimen/playback_icon_size_large" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/nextButton"
                            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                            android:layout_width="@dimen/playback_button_size_small"
                            android:layout_height="@dimen/playback_button_size_small"
                            android:layout_marginStart="@dimen/playback_button_spacing"
                            android:contentDescription="@string/accessibility_next_button"
                            android:enabled="false"
                            app:icon="@drawable/ic_skip_next"
                            app:iconSize="@dimen/playback_icon_size_small" />

                    </LinearLayout>

                    <!-- Secondary Row: Switch Group Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/switchGroupButton"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:contentDescription="@string/accessibility_switch_group_button"
                        android:enabled="false"
                        app:icon="@drawable/ic_swap_horiz"
                        app:iconSize="24dp" />

                </LinearLayout>

                <!-- Volume Control -->
                <LinearLayout
                    android:id="@+id/volumeContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/volume_margin_top"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:paddingHorizontal="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/playbackControlsContainer">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_volume_down"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:alpha="0.7" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/volumeSlider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="12dp"
                        android:valueFrom="0"
                        android:valueTo="100"
                        android:value="75"
                        android:stepSize="1"
                        android:contentDescription="@string/accessibility_volume_slider"
                        android:enabled="false" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_volume_up"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:alpha="0.7" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
