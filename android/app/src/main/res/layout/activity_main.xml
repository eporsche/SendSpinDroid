<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- ============================================================ -->
        <!-- DISCOVERY VIEW - Shown when not connected to a server        -->
        <!-- ============================================================ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/discoveryView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:importantForAccessibility="yes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/not_connected"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleText" />

            <Button
                android:id="@+id/discoverButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="24dp"
                android:text="@string/discover_servers"
                android:contentDescription="@string/accessibility_discover_servers"
                app:icon="@drawable/ic_refresh"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/statusText" />

            <!-- Discovery Progress Indicator -->
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/discoveryProgressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:indeterminate="true"
                android:visibility="gone"
                android:importantForAccessibility="no"
                app:indicatorSize="32dp"
                app:trackThickness="3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/discoverButton"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/discoveryStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/discovering"
                android:textSize="14sp"
                android:visibility="gone"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/discoveryProgressIndicator"
                tools:visibility="visible" />

            <Button
                android:id="@+id/addManualServerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:layout_marginTop="8dp"
                android:text="@string/add_server_manually"
                android:contentDescription="@string/accessibility_add_manual_server"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@drawable/ic_server"
                app:iconGravity="textStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/discoveryStatusText" />

            <TextView
                android:id="@+id/serversLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/available_servers"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground"
                android:labelFor="@id/serversRecyclerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addManualServerButton" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/serversRecyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:importantForAccessibility="yes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/serversLabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ============================================================ -->
        <!-- NOW PLAYING VIEW - Shown when connected to a server          -->
        <!-- ============================================================ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nowPlayingView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <!-- Connection Status Bar -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/connectionStatusBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Server Icon -->
                    <ImageView
                        android:id="@+id/connectedServerIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_server_connected"
                        android:contentDescription="@null"
                        app:tint="?attr/colorPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Connected Server Name -->
                    <TextView
                        android:id="@+id/connectedServerText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:text="@string/not_connected"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/disconnectButton"
                        app:layout_constraintStart_toEndOf="@id/connectedServerIcon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Disconnect Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/disconnectButton"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/disconnect"
                        android:textColor="?attr/colorError"
                        app:backgroundTint="?attr/colorErrorContainer"
                        app:icon="@drawable/ic_server_disconnected"
                        app:iconTint="?attr/colorError"
                        app:iconGravity="textStart"
                        app:iconSize="18dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Connection Progress (shown during connecting) -->
            <LinearLayout
                android:id="@+id/connectionProgressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/connectionProgressIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:importantForAccessibility="no"
                    app:indicatorSize="64dp"
                    app:trackThickness="4dp" />

                <TextView
                    android:id="@+id/connectionStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/connecting"
                    android:textSize="16sp"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite" />

            </LinearLayout>

            <!-- Now Playing Content -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nowPlayingContent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/connectionStatusBar">

                <!-- Large Album Art with Buffering Overlay -->
                <FrameLayout
                    android:id="@+id/albumArtContainer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_max="280dp"
                    app:layout_constraintWidth_percent="0.7">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="8dp">

                        <ImageView
                            android:id="@+id/albumArtView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/placeholder_album"
                            android:contentDescription="@string/album_art"
                            android:importantForAccessibility="yes" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Buffering Indicator Overlay -->
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/bufferingIndicator"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:visibility="gone"
                        android:importantForAccessibility="no"
                        app:indicatorSize="64dp"
                        app:trackThickness="4dp"
                        app:indicatorColor="?attr/colorPrimary"
                        tools:visibility="visible" />

                </FrameLayout>

                <!-- Track Info -->
                <TextView
                    android:id="@+id/nowPlayingText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/not_playing"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnBackground"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/albumArtContainer" />

                <TextView
                    android:id="@+id/metadataText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nowPlayingText" />

                <!-- Progress Bar -->
                <LinearLayout
                    android:id="@+id/progressContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/metadataText">

                    <TextView
                        android:id="@+id/currentPositionText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0:00"
                        android:textSize="12sp"
                        android:minWidth="40dp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:importantForAccessibility="no" />

                    <SeekBar
                        android:id="@+id/progressSeekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:max="1000"
                        android:progress="0"
                        android:contentDescription="@string/accessibility_progress_slider" />

                    <TextView
                        android:id="@+id/durationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0:00"
                        android:textSize="12sp"
                        android:minWidth="40dp"
                        android:gravity="end"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:importantForAccessibility="no" />

                </LinearLayout>

                <!-- Playback Controls with Icon Buttons -->
                <LinearLayout
                    android:id="@+id/playbackControlsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/progressContainer">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/previousButton"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/accessibility_previous_button"
                        android:enabled="false"
                        app:icon="@drawable/ic_skip_previous"
                        app:iconSize="28dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/playPauseButton"
                        style="@style/Widget.Material3.Button.IconButton.Filled"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:contentDescription="@string/accessibility_play_button"
                        android:enabled="false"
                        app:icon="@drawable/ic_play"
                        app:iconSize="36dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/nextButton"
                        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="16dp"
                        android:contentDescription="@string/accessibility_next_button"
                        android:enabled="false"
                        app:icon="@drawable/ic_skip_next"
                        app:iconSize="28dp" />

                </LinearLayout>

                <!-- Volume Control -->
                <LinearLayout
                    android:id="@+id/volumeContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/playbackControlsContainer">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_volume_down"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"
                        app:tint="?attr/colorOnSurfaceVariant" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/volumeSlider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="8dp"
                        android:valueFrom="0"
                        android:valueTo="100"
                        android:value="75"
                        android:stepSize="1"
                        android:contentDescription="@string/accessibility_volume_slider"
                        android:enabled="false" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_volume_up"
                        android:contentDescription="@null"
                        android:importantForAccessibility="no"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
